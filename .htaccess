<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !/public
    RewriteRule ^(.*)$ public/index.php?p=$1

# TODO: doesn't work
    RewriteCond %{REQUEST_URI} /public
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ public/index.php?p=err [L]

</IfModule>