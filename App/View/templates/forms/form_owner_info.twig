{% block form_owner_info %}
    {% if owner %}
        <form action="profil" method="POST" enctype="multipart/form-data" class="row form-general">

            <h2>Auteur du blog</h2>
            <div class="form-group">
                <label for="firstname">Prénom</label>
                <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Prénom" value="{{ owner.getFirstName() }}">
            </div>


            <div class="form-group">
                <label for="lastname">Nom</label>
                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Nom" value="{{ owner.getLastName() }}">
            </div>


            <div class="form-group">
                <label for="catchphrase">Phrase d'accroche</label>
                <textarea name="catchphrase" class="form-control" id="catchphrase" placeholder="Phrase d'accroche">{{ owner.getCatchPhrase() }}</textarea>
            </div>


            <span>Curriculum Vitae : <a href="{{ owner.getCvFile().getUrl() }}" target="_blank">{{ owner.getCvFile().getTitle() }}</a></span>

            <div class="form-group">
                <label for="file-cv">Mettre à jour : </label>
                <input type="file" name="file-cv" class="form-control" id="file-cv" placeholder="CV">
            </div>


            Photo
            <img src="{{ owner.getPhotoFile().getUrl() }}" alt="Photo" class="img-thumbnail" width="25px">

            <div class="form-group">
                <label for="file-photo">Mettre à jour : </label>
                <input type="file" name="file-photo" class="form-control" id="file-photo" placeholder="Photo">
            </div>


            <div class="form-group text-center">
                <input type="submit" name="submit-owner-profile"/>
            </div>

            <div class="col-12 text-center">


                {% if (result) and (result.getType()) == 'auteur' %}
                    <div class="alert alert-{{ (result.isErr()) ? 'warning' : 'success' }}" role="alert">
                        {% for key, m in result.getMsg() %}

                            {% if result.isErr() %}
                                {{ result.translateType(key) }} :
                            {% endif %}

                            {{ m }}<br />

                        {% endfor %}
                    </div>
                {% endif %}

            </div>

        </form>
    {% endif %}
{% endblock %}