{% block header %}
    <!-- Header -->
    <header class="masthead" style="background-image: url('/public/assets/img/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        {% if userid is not null %}
                            <div>User Id : {{ userid }}</div>
                        {% endif %}

                        {% if ownerinfo is not null %}
                            {{ ownerinfo.firstname }} {{ ownerinfo.lastname }}<br>
                            Catch phrase : {{ ownerinfo.catchphrase }}<br>
                            Photo : <img src="{{ ownerinfo.getPhotoFile().getUrl() }}" alt="photo" width="25px" height="25px"><br>
                            <a href="{{ ownerinfo.getCvFile().getUrl() }}" target="_blank">Curriculum Vitae</a><br>
                        {% endif %}

                        {{ userobj.getId() }}


                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
