{% block bo_posts_manage %}
    <section class="row gx-4 gx-lg-5 justify-content-center manage-posts" style="margin-top:25px">

        <div class="row">
            <div class="col-1"><strong>Actions</strong></div>
            <div class="col-5"><strong>Titre</strong></div>
            <div class="col-2"><strong></strong></div>
            <div class="col-2"><strong>Commentaires</strong></div>
            <div class="col-2"><strong>Date</strong></div>
        </div>

        {%  for post in posts |slice(0, 10) %}
            <div class="row">
                    <div class="col-1"><a href=""><i class="fa-solid fa-pen-to-square"></i></a>&nbsp; | &nbsp;<a href=""><i class="fa-solid fa-trash"></i></a></div>
                    <div class="col-5">{{ post.title }}</div>
                    <div class="col-2"></div>
                    <div class="col-2"></div>
                    <div class="col-2">{{ post.date|date('d/m/Y') }}</div>
            </div>
        {% endfor %}


    </section>
{% endblock %}