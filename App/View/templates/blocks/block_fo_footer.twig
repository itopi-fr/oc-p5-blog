{% block footer %}
    <!-- Footer-->
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                {# Socials #}
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">

                        {# Github #}
                        {% if ownerinfo.getSnGithub() is not empty %}
                        <li class="list-inline-item">
                            <a href="{{ ownerinfo.getSnGithub() }}" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        {% endif %}

                        {# LinkedIn #}
                        {% if ownerinfo.getSnLinkedin() is not empty %}
                            <li class="list-inline-item">
                                <a href="{{ ownerinfo.getSnLinkedin() }}" target="_blank">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                        {% endif %}

                    </ul>
                </div>

                {# Admin panel link#}
                {% if userobj.getRole() == 'owner' %}
                    <div class="footer-admin-link col-12 text-center mt-2">
                        <a class="footer-link-admin trans-quick trans-clr trans-trnsf" href="/owner">Panneau d'administration</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </footer>
{% endblock %}