{% block content %}

    <h1>BO - TEST</h1>

    <h2>User</h2>

    <button class="btn btn-primary btn-lg btn-block" type="button">
        <a href="test/test-get-user-1">Get User 1</a>
    </button>

    <button class="btn btn-primary btn-lg btn-block" type="button">
        <a href="test/test-get-user-owner-1">Get User Owner 1</a>
    </button>

    <h2>Token</h2>

    <button class="btn btn-primary btn-lg btn-block" type="button">
        <a href="test/test-create-pass-change-token">Create Token</a>
    </button>

