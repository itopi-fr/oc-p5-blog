{% extends "layout.twig" %}
{% block title %}
    BO - User Profile
{% endblock %}

{% block content %}
    <h1>BO - User Profile</h1>

    <form action="profil" method="POST" enctype="multipart/form-data" class="row form-general">

        <div class="col-md-6">
            <h2>User</h2>
            <div class="form-group">
                <label for="pseudo">Pseudo</label>
                <input type="text" name="pseudo" class="form-control" id="pseudo" placeholder="Pseudo" value="{{ user.getPseudo() }}">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Email" value="{{ user.getEmail() }}">
            </div>
            Avatar
                <img src="{{ user.getAvatarFile().getUrl() }}" alt="Avatar" class="img-thumbnail" width="50">

                <div class="form-group">
                    <label for="file-avatar">Mettre Ã  jour : </label>
                    <input type="file" name="file-avatar" class="form-control" id="file-avatar" placeholder="Avatar">
                </div>

        </div>

        <div class="col-md-6">
            <h2>Owner</h2>
        </div>

        <div class="col-12 text-center">
            <input type="submit" name="submit-user-profile"/>
            {% if result %}
                {% for res in result %}
                    <div class="alert alert-{{ (res.err) ? 'warning' : 'success' }}" role="alert">
                        {{ res.msg }}
                        {{ res.avatar.url }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>



    </form>
{% endblock %}